{{!< default}}

<header class="header index-header">
	{{#if @blog.cover_image}}
		<div class="header-background"
			style="background-image: url({{@blog.cover_image}})">
		</div>
	{{/if}}

	<div class="header-inner">
		<nav id="navigation"></nav>

		<div class="header-content">
			<h1 class="header-title font-ui-index-title font-light">
				{{@blog.title}}
			</h1>

			<h2 class="header-description font-ui-sans font-light">
				{{@blog.description}}
			</h2>
		</div>
	</div>
</header>

<main id="content" class="content" role="main">
	<section id="satou-posts"></section>
</main>
